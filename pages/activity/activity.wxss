@import '/style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
 }
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.actTitle {
  margin-top: 20rpx;
  text-align: left;
  font-size: 33rpx;
  font-weight: 500;
}
.actPicBox {
  margin: 10rpx 0;
  width: 100%;
  height: 350rpx;
  border-radius: 25rpx;
  overflow: hidden;
}
.actPic {
  width: 100%;
  height: 100%;
}

.weui-flex__item {
  padding: 0 17px;
  background: #fff;
}
.introduction {
  font-size: 30rpx;
  color: #333;
  margin: 20rpx 0 ;
}

.outDate {
  display:inline-block;
  padding:.15em .4em;
  min-width:8px;
  border-radius:18px;
  background-color:#888;
  color:#fff;
  line-height:1.2;
  text-align:center;
  font-size:12px;
  vertical-align:middle;
}

.weui-badge {
  background-color: #FF4544;
}
