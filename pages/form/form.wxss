@import '/style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}


.rowBg {
  background: #fff;
}
.tipColor {
  color: #555555;
  font-size: 35rpx;
}
.interval {
  margin-bottom: 25px;
}
.degree {
    font-size: 35rpx;
    margin-top: 3px;
    padding-left: 10px;
    height: 2.3em;
    line-height: 2.3em;
}
.placeholder{
    font-size: 35rpx;
    margin: 5px;
    padding: 0 10px;
    height: 2.3em;
    line-height: 2.3em;
}
.tooLong {
    font-size: 27rpx;
    margin: 5px;
    padding: 0 10px;
    height: 3em;
    line-height: 3em;
}