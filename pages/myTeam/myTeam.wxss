@import '/style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
 }
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    color: #cfcfcf;
}

.teamList {
  text-align: center;
  border-bottom: 1px solid #FF4544;
  padding-bottom: 50rpx;
}
.textCenter {
  text-align: center;
  line-height: 70rpx;
}
.myInfo {
  display: flex;
  flex-direction: row;
  background: #fff;
  padding:10rpx 20rpx;
}
.logoRow {
  margin-left: 10rpx;
}
.userLogo {
  width: 90rpx;
  height: 90rpx;
  background: #eee;
  border-radius: 50%;
}
.nameRow {
  margin-left: 30rpx;
}
.name {
  font-family: '微软雅黑';
  font-size: 35rpx;
  font-weight: 500;
}
.position {
  margin-left: 25rpx;
  padding: 5rpx 25rpx;
  background: #FF4544;
  color: #fff;
  border-radius: 5rpx;
  font-size: 10pt;
}
.teamNumber {
  color: #888888;
  font-size: 10pt;
}

.statement {
  margin-top: 50rpx;
  padding:30rpx 0 20rpx 0 ;
  color: #888888;
}
.topOne {
  background: #FF6E75;
  color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.topTwo {
  background: #FFC547;
  color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.topThree {
  background: #6FBDFF;
  color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.top {
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}
.topImg {
  width: 70rpx;
  height: 70rpx;
}
.btnCenter {
  margin-top: 10rpx;
}