@import '/style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.container {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.leftImg>image {
  margin: 0 20rpx 0 0;
}
.positionRow {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
  align-items: center;
}
.position {
  font-size: 9pt;
  margin-left: 20rpx;
}
.position > text {
  background: #ff4544;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  color: #fff;
  
}
.memberName {
  font-size: 14pt;
  font-weight: 600;
}
.mainText {
  margin-bottom: 10rpx;
}