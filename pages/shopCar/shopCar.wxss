@import '/style/weui.wxss';
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

/*产看详情  */
.toDetail {
  font-size: 13px;
  color: #FF4544;
  border: 1px solid #FF4544;
  padding: 8rpx 10rpx;
  border-radius: 8rpx;
  float: right;
}

.float-icon {
  position:fixed;
  z-index:20;
  right:50rpx;
  bottom:50rpx;
}
.float-icon .float-icon-btn {
  display:block;
  padding:0;
  margin:0;
  border:none;
  background:none;
  opacity:0.8;

}


.float-icon .float-icon-btn{
    display: block;
    padding: 0;
    margin: 0;
    border: none;
    background: none;
    opacity: 0.8;
}
.float-icon .float-icon-btn:after{
    display: none;
}

.float-icon .float-icon-btn:active{
    opacity: .5;
}

.float-icon .float-icon-btn image{
    width: 80rpx;
    height: 80rpx;
    display: block;
}